 
<!-- Login Modal -->
<div class="modal fade" id="loginModal" tabindex="-1" role="dialog" aria-labelledby="loginModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Kapat" onclick="controlInput()"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="loginModalLabel">Üyelik İşlemleri</h4>
            </div>
            <div class="modal-body">
              
                <!-------->
                <div id="content">
                    <ul id="tabs" class="nav nav-tabs " data-tabs="tabs">
                        <li class="active"><a href="#tabLogin" data-toggle="tab">Giriş</a></li>
                        <li><a href="#tabReg" data-toggle="tab">Kaydol</a></li>
                        
                    </ul>
                    <div id="my-tab-content" class="tab-content">
                        <div class="tab-pane active " id="tabLogin">
                            

                            <form class="form-horizontal">
                                <fieldset >
                                    <br/>
                                    <!-- Text input-->
                                    <div class="form-group">
                                        <label class="col-md-4 control-label" for="txtLoginMail">Mail</label>
                                        <div class="col-md-5">
                                            <input id="txtLoginMail" name="txtLoginMail" type="email" placeholder="Mail Adresi" class="form-control input-md" required>

                                        </div>
                                    </div>

                                    <!-- Password input-->
                                    <div class="form-group">
                                        <label class="col-md-4 control-label" for="txtLoginPass">Şifre</label>
                                        <div class="col-md-5">
                                            <input id="txtLoginPass" name="txtLoginPass" type="password" placeholder="Şifreniz" class="form-control input-md" required>

                                        </div>
                                    </div>

                                    <!-- Button -->
                                    <div class="form-group">
                                        <label class="col-md-4 control-label" for="btnLogin"></label>
                                        <div class="col-md-4">
                                            <input type="button" id="btnLogin" name="btnLogin" class="btn btn-primary" onclick="Login();"  value=" Giriş"/>
                                        </div>
                                    </div>

                                    <!--Helper Classes-->
                                    <div class="form-group">
                                        <label class="col-md-4 control-label" for="btnLogin"></label>
                                        <div class="col-md-12">
                                            <div class="alert alert-danger" role="alert" id="alertMessage" hidden></div>                                          
                                        </div>
                                    </div>
                                   
                                </fieldset>
                            </form>

                        </div>
                        <div class="tab-pane" id="tabReg">
                            
                            <form class="form-horizontal">
                                <fieldset>
                                    <br />                                 

                                    <!-- Text input-->
                                    <div class="form-group">
                                        <label class="col-md-4 control-label" for="txtRegName">İsim</label>
                                        <div class="col-md-5">
                                            <input id="txtRegName"  type="text" placeholder="İsminiz" class="form-control " required />

                                        </div>
                                    </div>

                                    <!-- Text input-->
                                    <div class="form-group">
                                        <label class="col-md-4 control-label" for="txtRegMail">Mail</label>
                                        <div class="col-md-5">
                                            <input id="txtRegMail" type="email" placeholder="Mail Adresi" class="form-control" required />                             
                                        </div>
                                    </div>

                                    <!-- Password input-->
                                    <div class="form-group">
                                        <label class="col-md-4 control-label" for="txtRegPass">Şifre</label>
                                        <div class="col-md-5">
                                            <input id="txtRegPass" type="password" placeholder="Şifreniz" class="form-control " required />
                                             
                                        </div>
                                    </div>

                                    <!-- Button -->
                                    <div class="form-group">
                                        <label class="col-md-4 control-label" for="btnReg"></label>
                                        <div class="col-md-4">
                                            <input type="button" id="btnReg" name="btnReg" class="btn btn-primary" onclick="SingUp();" value="Kaydol" />
                                        </div>
                                    </div>

                                    <!--Helper Classes-->
                                    <div class="form-group">
                                        <label class="col-md-4 control-label" for="btnLogin"></label>
                                        <div class="col-md-12">
                                            <div class="alert alert-danger" role="alert" id="alertMessageSign" hidden></div>
                                        </div>
                                    </div>
                                </fieldset>
                            </form>



                        </div>
                        
                    </div>
                </div>





            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal" onclick="controlInput();">İptal</button>
                
            </div>
        </div>
    </div>
</div>
